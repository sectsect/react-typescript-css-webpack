{
  "extends": "@spotify/tsconfig",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    // "esModuleInterop": true, // !!!!!!!!!!
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    // "baseUrl": "src/@types",
    "baseUrl": ".",
    "paths": {
      // "*": ["*"],
      // "*": ["node_modules/*", "src/@types/*"],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    ".eslintrc.js",
    "babel.config.js",
    ".eslintrc.js",
    "stylelint.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "/test",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
